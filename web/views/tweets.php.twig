{% extends 'layouts/main.php.twig' %}

{% block body %}
	
	<form action="/public/index.php/message/tweets" method="POST">
		<div class="row">
			<div class="form-group">
			<h4>Tweet here</h4>
			{% if error_message != '' %}
		        <h5 class="required text-center">
		            {{ error_message }}
		        </h5>
		    {% endif %}
		    <input class="form-control input-lg" name="message" id="inputlg" type="text" placeholder="What's on your mind?">
		    <button type="submit" class="btn btn-default">Post</button>
		  	</div>
		</div>

		{% for tweet in tweets %}
			<div class='row'>
				<div class="panel panel-default">
				  <div class="panel-body">
				    {{ tweet }}
				  </div>
				</div>
			</div>
		{% endfor %}
	</form>

{% endblock %}